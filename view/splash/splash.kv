MDScreen:
    canvas:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            size: self.size
            pos: self.pos
    name: 'splash'
    on_enter: self.ids.progress.start()

    GridLayout:
        cols: 1
        rows: 2
        Image:
            source: r'resources/assets/logo_1.png'
            allow_stretch: True
            anim_delay: 0

        MDProgressBar:
            id: progress
            orientation: 'horizontal'
            type: 'indeterminate'
            running_duration: 1
            catching_duration: 1